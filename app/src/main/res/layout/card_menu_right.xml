<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view55"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:background="@drawable/logo"
    android:keyboardNavigationCluster="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameInThair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name in thai"

                        android:textSize="21dp" />

                    <TextView
                        android:id="@+id/nameInEngr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="Name in English " />

                    <TextView
                        android:id="@+id/pricer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Price:$$$" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFiller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_Minusr"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="-"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/foodCounterr"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@android:color/white"
                        android:clickable="false"
                        android:text="0" />

                    <Button
                        android:id="@+id/bt_Addr"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="+"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/food_imgr"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:padding="5dp"
                    app:srcCompat="@drawable/logo" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>