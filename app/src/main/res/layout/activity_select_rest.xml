<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.hachii.SelectRest">

    <Button
        android:id="@+id/button"
        android:layout_width="192dp"
        android:layout_height="59dp"
        android:background="@drawable/flagbutt2"
        android:text="Restaurant"
         />

    <Button
        android:id="@+id/button2"
        android:layout_width="192dp"
        android:layout_height="59dp"
        android:background="@drawable/flagbutt2"
        android:layout_toRightOf="@+id/button"
        android:text="My Order"
         />
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolba"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rest1">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    android:background="@drawable/logo" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/logo"
                    android:text="Hachiban at Tonmhai and Sainam Resort"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/text1.1"
                    android:layout_width="match_parent"

                    android:layout_height="30dp"
                    android:layout_below="@id/text1"
                    android:layout_toRightOf="@id/logo"
                    android:text="Status: Open"
                    android:textAlignment="center" />
            </RelativeLayout>



    </ScrollView>


</RelativeLayout>
